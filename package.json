{
  "name": "react-boilerplate",
  "version": "0.1.0",
  "description": "Starter kit for React, Webpack (with Hot Module Replacement) and Babel",
  "license": "MIT",
  "scripts": {
    "build": "npm run clean-build && NODE_ENV=production webpack -p --config=configs/webpack/prod",
    "clean-build": "rm -f -r -d build",
    "lint": "npm run lint:js && npm run lint:sass",
    "lint:js": "jshint",
    "lint:sass": "stylelint ./src/**/*.scss",
    "start": "NODE_ENV=development npm run start-dev",
    "start-dev": "webpack-dev-server --config=configs/webpack/dev",
    "start-prod": "npm run build && node express.js",
    "test": "jest --watch --coverage --config=configs/jest.json"
  },
  "postcss": {},
  "dependencies": {
    "axios": "^0.18.0",
    "cross-env": "5.1.5",
    "react": "16.3.2",
    "react-dom": "16.3.2",
    "react-hot-loader": "4.1.3",
    "react-router-dom": "4.2.2"
  },
  "devDependencies": {
    "@firebase/app-types": "^0.3.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "8.2.3",
    "babel-jest": "^22.4.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-app": "^3.1.1",
    "babel-preset-stage-2": "^6.24.1",
    "css-loader": "^0.28.11",
    "express": "^4.16.3",
    "file-loader": "^1.1.11",
    "filepond-plugin-image-preview": "^1.0.9",
    "firebase": "^4.12.1",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "image-webpack-loader": "^4.2.0",
    "immutable": "^3.8.2",
    "iota.lib.js": "^0.4.7",
    "jest": "^22.4.3",
    "js-sha256": "^0.9.0",
    "jshint": "^2.9.5",
    "lodash-es": "^4.17.8",
    "mam.client.js": "iotaledger/mam.client.js",
    "mapbox-gl": "^0.45.0",
    "moment": "^2.22.1",
    "node-sass": "^4.9.0",
    "postcss-loader": "^2.1.4",
    "react-addons-test-utils": "^15.6.2",
    "react-autosuggest": "^9.3.4",
    "react-dev-utils": "^5.0.1",
    "react-dom": "^16.3.1",
    "react-easy-chart": "^1.0.0",
    "react-filepond": "^2.0.6",
    "react-map-gl": "^3.2.7",
    "react-md": "^1.2.13",
    "react-redux": "^5.0.7",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-sizeme": "^2.4.3",
    "react-toastify": "^4.0.0-rc.4",
    "redux": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-pack": "^0.1.5",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.21.0",
